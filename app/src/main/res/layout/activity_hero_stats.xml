<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a15017523.demoexplicitintent.HeroStatsActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvName" />

    <TextView
        android:id="@+id/tvStrength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvStength" />

    <TextView
        android:id="@+id/tvTechnical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvTechnical" />

    <LinearLayout
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnLike" />

        <Button
            android:id="@+id/btnDislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnDislike" />
    </LinearLayout>
</LinearLayout>
